<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_history_icon"
            android:layout_width="@dimen/material_88dp"
            android:layout_height="@dimen/material_88dp"
            android:gravity="center"
            android:scaleType="fitStart"
            android:visibility="gone"
            tools:src="@mipmap/ic_launcher" />


        <TextView
            android:layout_marginLeft="@dimen/material_8dp"
            android:id="@+id/tv_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_history_icon"
            android:minHeight="@dimen/material_40dp"
            android:maxLines="3"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/tv_history_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_history_icon"
            android:layout_below="@id/tv_history_title"
            android:layout_marginTop="@dimen/material_4dp"
            android:layout_toRightOf="@id/iv_history_icon"
            android:gravity="fill_vertical|right"
            android:minHeight="@dimen/material_24dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>