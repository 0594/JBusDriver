<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:id="@+id/ll_git_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="@dimen/material_24dp"
            android:minWidth="@dimen/material_24dp"
            android:padding="@dimen/material_2dp"
            android:src="@mipmap/ic_github" />

        <Space
            android:layout_width="@dimen/material_8dp"
            android:layout_height="@dimen/material_0dp" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="JbusDriver" />


    </LinearLayout>

    <Space
        android:layout_width="@dimen/material_0dp"
        android:layout_height="@dimen/material_8dp" />

    <LinearLayout
        android:id="@+id/ll_click_reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="@dimen/material_24dp"
            android:minWidth="@dimen/material_24dp"
            android:src="@drawable/ic_cached_black_24dp" />

        <Space
            android:layout_width="@dimen/material_8dp"
            android:layout_height="@dimen/material_0dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载出现问题,尝试点击此处" />


    </LinearLayout>

    <Space
        android:layout_width="@dimen/material_0dp"
        android:layout_height="@dimen/material_8dp" />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android.studio@android.com" />

</LinearLayout>
